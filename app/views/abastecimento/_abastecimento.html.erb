<div class="card mb-3">
  <div class="card-header bg-primary text-white">
    Detalhes do Abastecimento #<%= @abastecimento.id %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Abastecimento em <%= @abastecimento.nome_posto %></h5>
    <p class="card-text">
      <strong>Veículo:</strong>
      <% if @abastecimento.veiculo.present? %>
        <%= @abastecimento.veiculo.placa %> - <%= @abastecimento.veiculo.modelo %>
      <% else %>
        N/A
      <% end %>
    </p>
    <p class="card-text">
      <strong>Tipo de Combustível:</strong>
      <% if @abastecimento.tipo_combustivel.present? %>
        <%= Abastecimento.human_attribute_name("tipo_combustivel_#{@abastecimento.tipo_combustivel}") %>
      <% else %>
        N/A
      <% end %>
    </p>
    <p class="card-text">
      <strong>Data do Abastecimento:</strong> <%= l(@abastecimento.data_abastecimento) %>
    </p>
    <p class="card-text">
      <strong>Quantidade (Litros):</strong> <%= number_with_precision(@abastecimento.quantidade_litros, precision: 2, separator: ",", delimiter: ".") %> L
    </p>
    <p class="card-text">
      <strong>Preço por Litro:</strong> <%= number_to_currency(@abastecimento.preco_litro, unit: "R$", separator: ",", delimiter: ".") %>
    </p>
    <p class="card-text">
      <strong>Total do Abastecimento:</strong> <%= number_to_currency(@abastecimento.quantidade_litros * @abastecimento.preco_litro, unit: "R$", separator: ",", delimiter: ".") %>
    </p>
    <p class="card-text">
      <strong>Posto de Gasolina:</strong> <%= @abastecimento.nome_posto %>
    </p>
  </div>
</div>